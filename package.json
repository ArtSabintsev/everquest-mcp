{
  "name": "everquest-mcp",
  "version": "1.0.0",
  "description": "MCP server for EverQuest game data - search spells, items, NPCs, zones, quests across multiple databases",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "everquest-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
